.container
  padding 30px 20px
  &Header
    display flex
    justify-content space-between
    text-align end
    margin-bottom 10px

.article
  display flex
  flex-direction column
  &Image
    width 100%
    height 100%
    transition all 0.3s ease
    &:hover
      transform scale(1.2)
  &ImageContainer
    overflow hidden
    border-radius 5px
    border darkgray 1px solid
    height 200px
    width 100%